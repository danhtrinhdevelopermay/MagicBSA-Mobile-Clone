<?xml version="1.0" encoding="utf-8"?>
<!-- âœ… INSTANT SPLASH: Optimized launch screen for immediate display -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient - matches splash screen exactly -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6366f1"
                android:centerColor="#8b5cf6"
                android:endColor="#ec4899"
                android:angle="45" />
        </shape>
    </item>

    <!-- App logo in center - optimized size for instant rendering -->
    <item android:gravity="center">
        <bitmap android:src="@mipmap/ic_launcher"
                android:gravity="center"
                android:width="100dp"
                android:height="100dp" />
    </item>
    
    <!-- App name below logo for immediate brand recognition -->
    <item android:gravity="center|bottom"
          android:bottom="200dp">
        <shape android:shape="rectangle">
            <size android:width="200dp" android:height="40dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>